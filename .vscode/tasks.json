{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "."
            ],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "echoCommand": true
        },
        {
            "taskName": "run",
            "command": "ts-node",
            "isShellCommand": true,
            "args": [
                //"${file}"
                "./app.ts"
            ],
            "showOutput": "always",
            "echoCommand": true
            //"problemMatcher": "$tsc"    
        }
    ]
}